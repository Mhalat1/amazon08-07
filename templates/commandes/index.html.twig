{% extends 'base.html.twig' %}

{% block body %}
			<div class="col-md-3" name="{{articles.categorie}}">
				<div class="card">
					<div class="col-md-12">
						<img src={{articles.image}} class="card-img-top" style="height: 200px;" alt="Article Image">
					</div>
					<div class="card-body">
						<h5 class="card-title">{{articles.id}}</h5>
						<h5 class="card-title">{{articles.name}}</h5>
						<span class="card-categorie">{{articles.price}}</span>
						<p class="card-text">{{articles.description}}</p>
					</div>
				</div>
			</div>
			<p>{{orders.id}}</p>

        <a href="http://127.0.0.1:8000/displaypanier">
			Lien Panier
		</a>
{% endblock %}
